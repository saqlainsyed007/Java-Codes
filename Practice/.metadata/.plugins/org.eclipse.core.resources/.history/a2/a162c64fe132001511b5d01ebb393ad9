public class Pattern2 
{
	public static void main(String[] args) 
	{
		int n=4;
		for(int i=1;i<=n;i++)
		{
			for(int k=n-i;k>=1;k--) // Comment This Loop for Left Alignment
			{
				System.out.print(" "); //1 Space for Triangle, 2 Space for Right Angled Triangle
			}
			for(int j=1;j<=i;j++)
			{
				System.out.print(i+" "); //Print i/j for Different Patterns
			}
			System.out.println();
		}
	}
}
